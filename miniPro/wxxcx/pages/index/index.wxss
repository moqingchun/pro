.wrap {
    height: 100vh;
    background: #F5F7F9;
    font-size: 32rpx;
    color: #333333;
}

.home_bg {
    width: 100%;
    height: 588rpx;
}

.home_title {
    font-size: 80rpx;
    margin: 0 64rpx 64rpx;
}

.home_block {
    margin: 0 64rpx;
    background: #FFFFFF;
    box-shadow: 0rpx 32rpx 48rpx 0rpx rgba(0, 0, 0, 0.08);
    border-radius: 24rpx;
    padding: 28rpx 32rpx 16rpx;
    position: relative;
}

.v_enter {
    display: flex;
    align-items: center;
    color: #999999;
    font-size: 32rpx;
}

.v_enter image {
    width: 48rpx;
}

.v_text {
    font-size: 48rpx;
}

.v_btn {
    position: absolute;
    top: 28rpx;
    right: 32rpx;
    font-size: 24rpx;
    color: #FFFFFF;
    background: #FFD100;
    padding: 12rpx 24rpx;
    border-radius: 8rpx;
}